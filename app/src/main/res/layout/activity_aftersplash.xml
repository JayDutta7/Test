<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/backgrnd"
        >

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/splashLogo"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/splashlogo"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_below="@+id/splashLogo"
            android:id="@+id/name_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:padding="@dimen/_10sdp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
    />


    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:layout_alignParentBottom="true"
                                                  android:orientation="vertical"
                                                  android:layout_marginLeft="@dimen/_10sdp"
                                                  android:layout_marginRight="@dimen/_10sdp"
                                                  android:layout_marginBottom="@dimen/_10sdp">


        <com.google.android.material.button.MaterialButton android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:visibility="gone"
                                                           android:text="@string/hint_login"
                                                           android:textSize="@dimen/_12sdp"
                                                           android:layout_gravity="bottom"
                                                           android:id="@+id/clicktologin"
                                                           android:textAllCaps="false"
                                                           android:textColor="@color/white"
                                                           android:textStyle="bold"
                                                           android:theme="@style/PrimaryFlatButton"

        />

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:padding="@dimen/_5sdp"
                android:text="@string/hint_registration"
                android:id="@+id/clicktoregistration"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
        />


    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>